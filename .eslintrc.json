{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "react"
    ],
    "rules": {
	"linebreak-style": ["error", "unix"],
	"semi": ["error", "always"],
	"no-extra-parens": ["error", "all"],
	"consistent-return": "error",
	"no-shadow": "error",
	"no-unused-vars": ["error", { "vars": "local",
				      "args": "none"}
			  ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
